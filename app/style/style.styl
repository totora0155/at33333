@charset "utf-8"
@import "normalize"

.pane
  background: #373C38
  font-family: 'Droid Sans Mono', 'Verdana, "游ゴシック", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif'

.timer-space
  text-align: center

.timer-work
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  margin: auto
  text-shadow: -1px -1px rgba(0,0,0,.4), 1px -1px rgba(0,0,0,.4), -1px 1px rgba(0,0,0,.4), 1px 1px rgba(0,0,0,.4)
  for p in (-webkit- -moz- -ms- "")
    {p}user-select: none

.timer-sep
  font-size: .85em
  position: relative
  bottom: 34px

.counter
  width: 100%
  text-align: center
  position: absolute
  bottom: 1em

.counts
  list-style: none
  padding: 0
  margin: 0

  &-sum
    position: absolute
    right: 1em
    bottom: 1em
    cursor: help

  &-count
    display: inline-block
    height: 16px
    width: 16px
    box-sizing: border-box
    border: 8px solid
    margin: 0 5px
    border-radius: 50%
    box-shadow: 0 0 3px 1px

  &-off
    color: #2b2b2b


.sns-
  position: absolute
  top: 1em
  right: 1em

  &list
    list-style: none
    padding: 0
    margin: 0

  &item
    display: inline-block
    margin: 0

  &a
    display: inline-block
    height: 34px
    width: @height

    [class*="icono-"]
      transition: .2s linear
      color: #2b2b2b

  &twitter
    &:hover
      [class*="icono-"]
        color: #55acee

  &facebook
    &:hover
      [class*="icono-"]
        color: #315096

  &gplus
    position: relative
    top: 2px
    &:hover
      [class*="icono-"]
        color: #dd4b39
